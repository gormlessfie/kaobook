<%# Create a post section %>
<%= render 'shared/posts/create_post', post: @post %>

<section class='section'>
  <div class='container mb-3'>
    <h2 class='title is-4'>Your Timeline</h1>
  </div>

  <% @posts.each do |post| %>
    <div class='container box' id="dropdown_post_<%= post.id %>">
      <div class=columns>
        <%= render 'shared/posts/post_user_details', post: post %>

        <%= render 'shared/posts/post_dropdown', post: post %>
      </div>

      <section class='section'>
        <div class='block'>
          <p><%= post.body %></p>
        </div>
      </section>
      
      <section class='section'>
        <div class='container'>
          <%= render 'shared/posts/post_likes', post: post %>

          <%= render 'shared/posts/post_comments', post: post %>
        </div>
      </section>

      <%= render 'shared/posts/create_comments', post: post %>
    </div>
  <% end %>
</section>
