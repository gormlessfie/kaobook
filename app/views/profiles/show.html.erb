<section class='section'>
  <div class='container box'>

    <h1 class='title is-1'>Personal Information</h1>
    
    <div class='container box'>
      <span class='title is-3'>Profile Picture</span>
      <%= form_with model: @profile, url: user_profile_path(current_user), method: :put do |f| %>
        <div class='field'>
          <%= f.file_field :avatar %>
        </div>

        <div class='field actions'>
          <%= f.submit 'Upload', class: 'button is-info is-outlined' %>
        </div>
      <% end %>
    </div>

    <%= render 'list_information' %>

    <%= link_to 'Edit profile', edit_user_detail_path(current_user), class: 'button' %>
  </div>
</section>
